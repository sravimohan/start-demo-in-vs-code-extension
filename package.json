{
	"name": "start-demo",
	"displayName": "Start Demo",
	"description": "Configure your demo settings ahead and get into your Demo instantly when required",
	"icon": "logo.png",
	"version": "1.0.0",
	"author": "Ravi Mohan",
	"publisher": "roonga",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sravimohan/start-demo-in-vs-code-extension"
	},
	"keywords": [
		"demo",
		"start demo",
		"demo mode",
		"presentation",
		"presentation mode",
		"live",
		"live code",
		"live coding"
	],
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:start-demo.startstartDemo"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "start-demo.startstartDemo",
				"title": "Start Demo"
			},
			{
				"command": "start-demo.endstartDemo",
				"title": "End Demo"
			}
		],
		"keybindings": [
			{
				"command": "extension.startDemoEnd",
				"key": "escape",
				"when": "instartDemo"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Start Demo Settings",
			"properties": {
				"startDemo.fullScreen": {
					"type": "boolean",
					"default": false,
					"description": "Full Screen"
				},
				"startDemo.enableZenMode": {
					"type": "boolean",
					"default": false,
					"description": "Zen Mode"
				},
				"startDemo.centeredLayout": {
					"type": "boolean",
					"default": false,
					"description": "Centered Layout"
				},
				"startDemo.showSideBar": {
					"type": "boolean",
					"default": true,
					"description": "Show Side Bar"
				},
				"startDemo.showStatusBar": {
					"type": "boolean",
					"default": true,
					"description": "Show Status Bar"
				},
				"startDemo.showActivityBar": {
					"type": "boolean",
					"default": true,
					"description": "Show Activity Bar"
				},
				"startDemo.showPanel": {
					"type": "boolean",
					"default": true,
					"description": "Show Panel"
				},
				"startDemo.showEditorArea": {
					"type": "boolean",
					"default": true,
					"description": "Show Editor Area"
				},
				"startDemo.sideBarLocation": {
					"type": "string",
					"default": "left",
					"description": "Side Bar Location",
					"items": {
						"type": "string",
						"enum": [
							"Left",
							"Right"
						]
					},
					"uniqueItems": true
				},
				"startDemo.panelLocation": {
					"type": "string",
					"default": "bottom",
					"description": "Panel Location",
					"items": {
						"type": "string",
						"enum": [
							"Left",
							"Right",
							"Bottom"
						]
					},
					"uniqueItems": true
				},
				"startDemo.zoomLevel": {
					"type": "integer",
					"default": 2,
					"description": "Zoom level"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.4"
	}
}